<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>


    <!--======FORM VIEW ======-->
    <record id="ws_etiqueta" model="ir.ui.view" >
        <field name="name">ws.etiqueta.fac.form</field>
        <field name="model">ws.etiqueta.fac</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Etiqueta" width="500">
               <header>
                <field name="download_file" invisible="1" />

               </header>
               <sheet>
                    <separator colspan="2" string="Envio TIPSA"/>
                    <group col="2">
                        <field name="opcion" required="1"/>
                    </group>
                    <group col="4" >

                        <field name="agencia_ori" readonly="1"/>
                         <field name="DirOri" readonly="1" />
                            <field name="NumOri" readonly="1" />
                            <field name="PisOri" readonly="1" />
                            <field name="PobOri" readonly="1" />
                            <field name="CPOri" readonly="1" />
                            <field name="TlfOri" readonly="1" />
                            <field name="CodProOri" readonly="1" />
                        <field name="dtm_envio" required="1"/>
                        <field name="Paq" required="1"/>
                        <field name="peso" required="1"/>
                        <field name="serv_tipsa" required="1"/>

                    </group>
                    <group col="4">
                            <field name="NomDes" readonly="1" />
                            <field name="DirDes" readonly="1" />
                            <field name="NumDes" readonly="1" />
                            <field name="PisDes" readonly="1" />
                            <field name="PobDes" readonly="1" />
                            <field name="CPDes" readonly="1" />
                            <field name="TlfDes" readonly="1" />
                            <field name="EmailDes" readonly="1" />
                            <field name="CodProDes" readonly="1" />
                            <field name="PersContacto" readonly="1"/>
                            <field name="TipoViaDes" readonly="1"/>
                        </group>
                    <separator colspan="4" string="Etiqueta TIPSA"/>
                    <group col="2" >

                        <field name="formato" required="1"/>
                    </group>

                </sheet>
                <sheet attrs="{'invisible':[('download_file','=',False)]}">
                    <div >
                        <h2>Generacion Completa</h2>
                        <p>Descarga la etiqueta: <field
                          name="file" readonly="1" filename="datas_fname"/></p>
                        <p> Documento Generado (PDF - .pdf)</p>
                    </div>
                </sheet>
                <footer attrs="{'invisible':[('download_file','=',False)]}">
                    <center>

                        <button string="Cerrar" special="cancel"
                          icon="gtk-cancel" class="oe_highlight"/>
                    </center>
                </footer>
                <footer attrs="{'invisible':[('download_file','=',True)]}">

                    <center>

                        <button string="Generar Etiqueta" type="object"
                          icon="gtk-execute"/>
                        <button string="Cancelar" class="oe_link"
                          special="cancel" icon="gtk-cancel"/>
                    </center>
                </footer>

            </form>
            </field>
        </record>


    <!--=================ACCION ASISTENTE==================-->
    <act_window
        name="TIPSA FACTURA"
        res_model="ws.etiqueta.fac"
        src_model="account.invoice"
        view_mode="form" target="new"
        key2="client_action_multi"
        id="action_ws_etiqueta"
        />

</data>
</openerp>
